# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=supporter360
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# AWS Configuration
AWS_REGION=eu-west-1
RAW_PAYLOADS_BUCKET=supporter360-raw-payloads

# Queue URLs (set after deployment)
SHOPIFY_QUEUE_URL=
STRIPE_QUEUE_URL=
GOCARDLESS_QUEUE_URL=

# External API Keys
GOCARDLESS_ACCESS_TOKEN=
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
MAILCHIMP_API_KEY=

# Feature Flags
TAG_SYNC_ENABLED=true
RECONCILIATION_ENABLED=true

# Frontend Configuration
# The base URL for the Supporter 360 API
VITE_API_URL=https://api.supporter360.example.com

# API Key for authentication
# Generate this in the AWS Lambda console or Secrets Manager
VITE_API_KEY=your-api-key-here

# Environment (development, staging, production)
VITE_ENV=development
