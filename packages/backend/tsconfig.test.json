{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist-test",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.test.ts", "test/**/*.ts", "src/**/*"],
  "exclude": ["node_modules", "dist", "dist-test"],
  "references": [
    { "path": "../shared" }
  ]
}
