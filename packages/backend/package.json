{
  "name": "@supporter360/backend",
  "version": "1.0.0",
  "description": "Backend Lambda functions for Supporter 360",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && node bundle.cjs",
    "build:tsc": "tsc",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit --coverage",
    "test:integration": "jest --testPathPattern=test/integration --coverage",
    "test:e2e": "jest --testPathPattern=test/e2e --coverage",
    "test:infrastructure": "jest --testPathPattern=test/infrastructure --coverage",
    "test:all": "jest --coverage",
    "test:watch": "jest --watch",
    "test:clean": "docker-compose down -v && rm -rf coverage"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.478.0",
    "@aws-sdk/client-sqs": "^3.478.0",
    "@supporter360/shared": "^1.0.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "esbuild": "^0.19.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3"
  }
}
