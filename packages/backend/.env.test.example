# Test Environment Configuration
# Copy this file to .env.test and configure for local testing

# PostgreSQL Test Database
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=supporter360_test
TEST_DB_USER=supporter
TEST_DB_PASSWORD=supporter360_dev_password

# AWS Configuration (use LocalStack for local testing)
AWS_REGION=eu-west-1
AWS_ENDPOINT=http://localhost:4566

# S3 Configuration (LocalStack)
RAW_PAYLOADS_BUCKET=supporter360-test-payloads

# SQS Configuration (LocalStack)
STRIPE_QUEUE_URL=http://localhost:4566/000000000000/stripe-queue
SHOPIFY_QUEUE_URL=http://localhost:4566/000000000000/shopify-queue
GOCARDLESS_QUEUE_URL=http://localhost:4566/000000000000/gocardless-queue
MAILCHIMP_QUEUE_URL=http://localhost:4566/000000000000/mailchimp-queue
FUTURETICKETING_QUEUE_URL=http://localhost:4566/000000000000/futureticketing-queue

# Webhook Secrets (TEST values only - never use in production)
STRIPE_WEBHOOK_SECRET=whsec_test_secret_key_for_testing
SHOPIFY_WEBHOOK_SECRET=test_shopify_webhook_secret
GOCARDLESS_WEBHOOK_SECRET=test_gocardless_webhook_secret
MAILCHIMP_WEBHOOK_SECRET=test_mailchimp_webhook_secret

# Feature Flags
SKIP_DB_CREATE=0
ENABLE_QUERY_LOGGING=true

# Test Configuration
TEST_TIMEOUT_MS=30000
CLEAN_DB_AFTER_TEST=true
